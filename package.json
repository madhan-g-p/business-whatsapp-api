{
  "name": "business-whatsapp-api",
  "version": "1.0.0",
  "description": "TypeScript SDK for WhatsApp Cloud API with ESM & CommonJS support",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    },
    "./package.json": "./package.json",
    "./messages": {
      "import": "./dist/esm/messages/index.js",
      "require": "./dist/cjs/messages/index.js",
      "types": "./dist/esm/messages/index.d.ts"
    },
    "./templates": {
      "import": "./dist/esm/templates/index.js",
      "require": "./dist/cjs/templates/index.js",
      "types": "./dist/esm/templates/index.d.ts"
    },
    "./flows": {
      "import": "./dist/esm/flows/index.js",
      "require": "./dist/cjs/flows/index.js",
      "types": "./dist/esm/flows/index.d.ts"
    },
    "./filters": {
      "import": "./dist/esm/filters/index.js",
      "require": "./dist/cjs/filters/index.js",
      "types": "./dist/esm/filters/index.d.ts"
    },
    "./handlers": {
      "import": "./dist/esm/handlers/index.js",
      "require": "./dist/cjs/handlers/index.js",
      "types": "./dist/esm/handlers/index.d.ts"
    },
    "./listeners": {
      "import": "./dist/esm/listeners/index.js",
      "require": "./dist/cjs/listeners/index.js",
      "types": "./dist/esm/listeners/index.d.ts"
    },
    "./utils": {
      "import": "./dist/esm/utils/index.js",
      "require": "./dist/cjs/utils/index.js",
      "types": "./dist/esm/utils/index.d.ts"
    },
    "./types": {
      "import": "./dist/esm/types/index.js",
      "require": "./dist/cjs/types/index.js",
      "types": "./dist/esm/types/index.d.ts"
    },
    "./client": {
      "import": "./dist/esm/client/index.js",
      "require": "./dist/cjs/client/index.js",
      "types": "./dist/esm/client/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.esm.json && tsc -p tsconfig.cjs.json",
    "build:watch": "tsc -p tsconfig.esm.json --watch & tsc -p tsconfig.cjs.json --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prettier": "prettier --write src",
    "prettier:check": "prettier --check src",
    "docs": "typedoc src/index.ts --out docs",
    "clean": "rimraf dist",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run lint && npm run test",
    "version": "npm run clean && npm run build",
    "publish": "npm run prepare && npm publish"
  },
  "keywords": [
    "whatsapp",
    "whatsapp-api",
    "whatsapp-cloud",
    "messaging",
    "api",
    "typescript",
    "esm",
    "cjs",
    "async",
    "await"
  ],
  "author": "business-whatsapp-api Contributors",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.2",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/madhan-g-p/business-whatsapp-api.git"
  },
  "bugs": {
    "url": "https://github.com/madhan-g-p/business-whatsapp-api/issues"
  },
  "homepage": "https://github.com/madhan-g-p/business-whatsapp-api#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}